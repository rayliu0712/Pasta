<Window
  x:Class="Pasta.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:Pasta"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="Pasta"
  Icon="icon.ico"
  SizeToContent="Height"
  Width="250"
  Topmost="True"
  ResizeMode="CanMinimize"
  Background="#1E1E1E"
  MouseLeftButtonDown="Window_MouseLeftButtonDown"
  mc:Ignorable="d">

  <Window.Resources>
    <Style TargetType="Button">
      <Setter Property="Background" Value="#333333" />
      <Setter Property="Foreground" Value="#FFFFFF" />
      <Setter Property="BorderBrush" Value="#555555" />
      <Setter Property="Template">
        <Setter.Value>
          <ControlTemplate TargetType="Button">
            <Border
              x:Name="border"
              Background="{TemplateBinding Background}"
              BorderBrush="{TemplateBinding BorderBrush}"
              BorderThickness="1"
              CornerRadius="3"
              Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
          </ControlTemplate>
        </Setter.Value>
      </Setter>
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#444444" />
        </Trigger>
        <Trigger Property="IsPressed" Value="True">
          <Setter Property="Background" Value="#555555" />
        </Trigger>
      </Style.Triggers>
    </Style>

    <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
      <Setter Property="Background" Value="#0078D4" />
      <Setter Property="BorderBrush" Value="#0078D4" />
      <Style.Triggers>
        <Trigger Property="IsMouseOver" Value="True">
          <Setter Property="Background" Value="#1A86D8" />
          <Setter Property="BorderBrush" Value="#1A86D8" />
        </Trigger>
        <Trigger Property="IsPressed" Value="True">
          <Setter Property="Background" Value="#006CBE" />
          <Setter Property="BorderBrush" Value="#006CBE" />
        </Trigger>
      </Style.Triggers>
    </Style>
  </Window.Resources>

  <DockPanel>
    <TextBlock DockPanel.Dock="Bottom" HorizontalAlignment="Center" Margin="0,0,0,12">
      <Hyperlink
        NavigateUri="https://github.com/rayliu0712/Pasta"
        RequestNavigate="Hyperlink_RequestNavigate"
        Foreground="#888888">
        GitHub
      </Hyperlink>
    </TextBlock>
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="24">
      <Button
        x:Name="OpenButton"
        MinWidth="120"
        Margin="0,0,0,12"
        Padding="32,10"
        Click="OpenButton_Click">
        Open
      </Button>
      <Button
        x:Name="PasteButton"
        MinWidth="120"
        Padding="32,10"
        Style="{StaticResource PrimaryButton}"
        Click="PasteButton_Click">
        Paste
      </Button>
    </StackPanel>
  </DockPanel>
</Window>
